config ECO32
    bool
    select OFTREE
    select HAS_CACHE
    select GENERIC_FIND_NEXT_BIT
    select HAVE_CONFIGURABLE_MEMORY_LAYOUT
    select HAVE_CONFIGURABLE_TEXT_BASE
    select CONFIG_OFTREE_MEM_GENERIC
    select ELF
    default y

menu "ECO32 Settings"

config ARCH_TEXT_BASE
    hex "The address barebox gets linked at"
    default 0xC0400000

config BUILTIN_DTB
    bool "Link a DTB into the barebox image"
    depends on OFTREE

choice
    prompt "Select which Bultin DTB to use"
    depends on BUILTIN_DTB

config ECO32SIM_BUILTIN_DTB
    bool "Builtin DTB for the eco32 simulator"

endchoice

config BUILTIN_DTB_NAME
    string
    default "eco32sim" if ECO32SIM_BUILTIN_DTB
    depends on BUILTIN_DTB

choice
    prompt "Select your board"

config GENERIC
    bool "Generic"

endchoice

endmenu

